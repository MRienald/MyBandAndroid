<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:backgroundTint="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.profile.ProfileFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:padding="@dimen/_6sdp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:paddingHorizontal="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/bagianAtas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_15sdp"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/_40sdp">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="@dimen/_100sdp"
                        app:cardCornerRadius="@dimen/_50sdp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/ic_account_circle"
                                android:backgroundTint="#E2E2E2"
                                android:gravity="center" />

                            <ImageView
                                android:id="@+id/imgProfile"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop" />

                        </RelativeLayout>

                    </com.google.android.material.card.MaterialCardView>


                    <FrameLayout
                        android:layout_width="@dimen/_2sdp"
                        android:layout_height="@dimen/_95sdp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_8sdp"
                        android:background="@color/defaultcolor" />

                    <LinearLayout
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingVertical="@dimen/_5sdp">

                        <TextView
                            android:id="@+id/tvUsername"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/sfprodisplay_regular"
                            android:text="Coffemannn"
                            android:textColor="@color/hard_purple"
                            android:textSize="@dimen/_15sdp" />

                        <TextView

                            android:id="@+id/tvDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:drawableLeft="@drawable/ic_calendar"
                            android:drawablePadding="@dimen/_2sdp"
                            android:drawableTint="#E6D5382F"
                            android:fontFamily="@font/sfprodisplay_regular"
                            android:gravity="center_vertical"
                            android:text="08 / 04 / 2000"
                            android:textColor="@color/hard_purple"
                            android:textSize="@dimen/_8sdp" />

                        <TextView
                            android:id="@+id/tvCountry"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:drawableLeft="@drawable/ic_location"
                            android:drawablePadding="@dimen/_2sdp"
                            android:drawableTint="#E6D5382F"
                            android:fontFamily="@font/sfprodisplay_regular"
                            android:gravity="center_vertical"
                            android:text="Jakarta, Indonesia"
                            android:textColor="@color/hard_purple"
                            android:textSize="@dimen/_8sdp" />

                        <com.google.android.material.card.MaterialCardView
                            style="@style/Button.OutlineBox"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            app:cardBackgroundColor="@color/defaultcolor"
                            app:cardCornerRadius="@dimen/_5sdp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:fontFamily="@font/malgungothic"
                                    android:text="Be partnership MyBand"
                                    android:textColor="#747689"
                                    android:textSize="@dimen/_10sdp" />


                            </RelativeLayout>

                        </com.google.android.material.card.MaterialCardView>

                    </LinearLayout>


                </LinearLayout>

                <ImageView
                    android:id="@+id/btn_update"
                    style="@style/image_clickable"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:src="@drawable/ic_edit" />

            </RelativeLayout>

            <LinearLayout
                android:orientation="vertical"
                android:padding="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.card.MaterialCardView
                    app:cardCornerRadius="@dimen/_15sdp"
                    app:cardBackgroundColor="@color/defaultcolor"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_130sdp">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_30sdp">

                            <TextView
                                android:layout_marginTop="@dimen/_12sdp"
                                android:layout_marginStart="@dimen/_15sdp"
                                android:drawableLeft="@drawable/ic_status"
                                android:textColor="#80060930"
                                android:fontFamily="@font/malgungothic"
                                android:textSize="@dimen/_15sdp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" Status"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentBottom="true"
                                android:layout_marginTop="@dimen/_12sdp"
                                android:layout_marginEnd="@dimen/_12sdp"
                                android:drawableRight="@drawable/ic_arrow_small"
                                android:fontFamily="@font/malgungothic"
                                android:text="Learn more "
                                android:drawableTint="#80060930"
                                android:textColor="#80060930"
                                android:textSize="@dimen/_10sdp" />

                        </RelativeLayout>

                        <com.google.android.material.card.MaterialCardView
                            android:layout_marginHorizontal="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_6sdp"
                            app:cardBackgroundColor="#707070"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"/>
                        
                        <LinearLayout
                            android:orientation="horizontal"
                            android:gravity="center_vertical|center_horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_marginRight="@dimen/_20sdp"
                                android:textSize="@dimen/_11sdp"
                                android:textColor="@color/hard_purple"
                                android:drawableTop="@drawable/ic_booking"
                                android:drawablePadding="@dimen/_5sdp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Booking"/>

                            <TextView
                                android:layout_marginRight="@dimen/_20sdp"
                                android:textSize="@dimen/_11sdp"
                                android:textColor="@color/hard_purple"
                                android:drawableTop="@drawable/ic_process"
                                android:drawablePadding="@dimen/_5sdp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Process"/>

                            <TextView
                                android:layout_marginRight="@dimen/_20sdp"
                                android:textSize="@dimen/_11sdp"
                                android:textColor="@color/hard_purple"
                                android:drawableTop="@drawable/ic_repayment"
                                android:drawablePadding="@dimen/_5sdp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Repayment"/>

                            <TextView
                                android:textSize="@dimen/_11sdp"
                                android:textColor="@color/hard_purple"
                                android:drawableTop="@drawable/ic_rating"
                                android:drawablePadding="@dimen/_5sdp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Rating"/>


                        </LinearLayout>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    style="@style/Button.OutlineBox"
                    android:layout_marginTop="@dimen/_10sdp"
                    app:cardCornerRadius="@dimen/_15sdp"
                    app:cardBackgroundColor="@color/defaultcolor"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="@dimen/_15sdp"
                            android:layout_marginStart="@dimen/_20sdp"
                            android:fontFamily="@font/malgungothic"
                            android:text="Language"
                            android:textColor="#80060930"
                            android:textSize="@dimen/_15sdp" />

                        <TextView
                            android:drawableTint="#80060930"
                            android:drawableRight="@drawable/ic_arrow_forward"
                            android:layout_marginEnd="@dimen/_15sdp"
                            android:layout_marginVertical="@dimen/_17sdp"
                            android:layout_alignParentEnd="true"
                            android:textSize="@dimen/_11sdp"
                            android:text="English"
                            android:drawablePadding="@dimen/_5sdp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </RelativeLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    style="@style/Button.OutlineBox"
                    android:layout_marginTop="@dimen/_5sdp"
                    app:cardCornerRadius="@dimen/_15sdp"
                    app:cardBackgroundColor="@color/defaultcolor"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="@dimen/_15sdp"
                            android:layout_marginStart="@dimen/_20sdp"
                            android:fontFamily="@font/malgungothic"
                            android:text="Currency"
                            android:textColor="#80060930"
                            android:textSize="@dimen/_15sdp" />

                        <TextView
                            android:drawableTint="#80060930"
                            android:drawableRight="@drawable/ic_arrow_forward"
                            android:layout_marginEnd="@dimen/_15sdp"
                            android:layout_marginVertical="@dimen/_17sdp"
                            android:layout_alignParentEnd="true"
                            android:textSize="@dimen/_11sdp"
                            android:drawablePadding="@dimen/_5sdp"
                            android:text="IDR"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </RelativeLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    style="@style/Button.OutlineBox"
                    android:layout_marginTop="@dimen/_5sdp"
                    app:cardCornerRadius="@dimen/_15sdp"
                    app:cardBackgroundColor="@color/defaultcolor"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="@dimen/_15sdp"
                            android:layout_marginStart="@dimen/_20sdp"
                            android:fontFamily="@font/malgungothic"
                            android:text="Reminders"
                            android:textColor="#80060930"
                            android:textSize="@dimen/_15sdp" />

                        <Switch
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:layout_width="match_parent"
                            android:layout_height="70dp"/>

                    </RelativeLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    style="@style/Button.OutlineBox"
                    android:layout_marginTop="@dimen/_5sdp"
                    app:cardCornerRadius="@dimen/_15sdp"
                    app:cardBackgroundColor="@color/defaultcolor"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_marginVertical="@dimen/_15sdp"
                            android:layout_marginStart="@dimen/_20sdp"
                            android:fontFamily="@font/malgungothic"
                            android:textColor="#80060930"
                            android:textSize="@dimen/_15sdp"
                            android:text="Favorite"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:drawableTint="#80060930"
                            android:drawableRight="@drawable/ic_arrow_forward"
                            android:layout_marginEnd="@dimen/_15sdp"
                            android:layout_marginVertical="@dimen/_17sdp"
                            android:layout_alignParentEnd="true"
                            android:textSize="@dimen/_11sdp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </RelativeLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    style="@style/Button.OutlineBox"
                    android:layout_marginTop="@dimen/_5sdp"
                    app:cardCornerRadius="@dimen/_15sdp"
                    app:cardBackgroundColor="@color/defaultcolor"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_marginVertical="@dimen/_15sdp"
                            android:layout_marginStart="@dimen/_20sdp"
                            android:fontFamily="@font/malgungothic"
                            android:textColor="#80060930"
                            android:textSize="@dimen/_15sdp"
                            android:text="Privacy Policy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:drawableTint="#80060930"
                            android:drawableRight="@drawable/ic_arrow_forward"
                            android:layout_marginEnd="@dimen/_15sdp"
                            android:layout_marginVertical="@dimen/_17sdp"
                            android:layout_alignParentEnd="true"
                            android:textSize="@dimen/_11sdp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </RelativeLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <com.google.android.material.card.MaterialCardView
                android:layout_marginBottom="@dimen/_70sdp"
                app:cardCornerRadius="@dimen/_6sdp"
                app:cardBackgroundColor="@color/defaultcolor"
                android:layout_marginTop="@dimen/_40sdp"
                android:layout_gravity="center_horizontal"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_35sdp">

                <TextView
                    android:id="@+id/btnLogout"
                    android:gravity="center"
                    android:textSize="@dimen/_14sdp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="#E86464"
                    android:fontFamily="@font/malgungothic"
                    android:text="Sign Out"/>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>