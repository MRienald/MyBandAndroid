    <fragment
        android:id="@+id/navigation_catagory"
        android:name="com.mrienaldi.myband.ui.catagory.CatagoryFragment"
        android:label="@string/title_catagory"
        tools:layout="@layout/fragment_catagory" />

    <fragment
        android:id="@+id/navigation_notifications"
