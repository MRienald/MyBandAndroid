<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_product_small"
        style="@style/Button.OutlineBox"
        android:layout_marginBottom="@dimen/_5sdp"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="@dimen/_8sdp"
        app:strokeWidth="@dimen/_1sdp"
        app:strokeColor="@color/hard_purple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_5sdp"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.card.MaterialCardView
                app:strokeWidth="@dimen/_1sdp"
                app:strokeColor="@color/hard_purple"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                app:cardCornerRadius="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/image_product"
                    android:layout_width="@dimen/_120sdp"
                    android:layout_height="@dimen/_90sdp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/imageproduct2"/>

            </com.google.android.material.card.MaterialCardView>


            <TextView
                android:id="@+id/tv_name"
                android:layout_marginStart="@dimen/_14sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="wrap_content"
                android:text="Juicy Luicy"
                android:textColor="@color/hard_purple"
                android:textSize="@dimen/_15sdp"
                android:fontFamily="@font/swis721_wgl4_bt"/>

            <LinearLayout
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal"
                android:layout_width="@dimen/_95sdp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Genre"
                    android:textColor="#80060930"
                    android:textSize="@dimen/_9sdp"
                    android:fontFamily="@font/sfprodisplay_regular"/>

                <TextView
                    android:id="@+id/tv_genre"
                    android:layout_marginStart="@dimen/_17sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jazz, Pop"
                    android:textColor="@color/hard_purple"
                    android:textSize="@dimen/_9sdp"
                    android:fontFamily="@font/sfprodisplay_regular"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Type"
                    android:textColor="#80060930"
                    android:textSize="@dimen/_9sdp"
                    android:fontFamily="@font/sfprodisplay_regular"/>

                <TextView
                    android:id="@+id/tv_type"
                    android:layout_marginStart="@dimen/_22sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Band"
                    android:textColor="@color/hard_purple"
                    android:textSize="@dimen/_9sdp"
                    android:fontFamily="@font/sfprodisplay_regular"/>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_marginVertical="@dimen/_10sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10.000.000"
                        android:textColor="@color/hard_purple"
                        android:textSize="@dimen/_9sdp"
                        android:fontFamily="@font/sfprodisplay_regular"/>

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
    

</RelativeLayout>